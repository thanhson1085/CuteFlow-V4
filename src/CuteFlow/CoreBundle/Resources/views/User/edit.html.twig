{% extends 'CuteFlowCoreBundle::admin.html.twig' %}

{% block title %}{{ parent() }} - {{ "user.title.administration" | trans }}{% endblock %}

{% block sidebarclass %}class="nosidebar"{% endblock %}

{% block body %}
    <h2>{{ "user.header.edit_user" | trans }}</h2>

    {% if form_errors(form) %}
        <div class="flash error">
            {{ form_errors(form) }}
        </div>
        <br/>
	{% endif %}

    <form method="post" action="{{ path('cuteflow_admin_user_save', {'id': user.id ? user.id : -1})}}"
          {{ form_enctype(form) }}>

        <div class="box tabular settings">
            <p>
                {{ form_label(form.firstName) }}
                {{ form_widget(form.firstName) }}
            </p>
            <p>
                {{ form_label(form.lastName) }}
                {{ form_widget(form.lastName) }}
            </p>
            <p>
                {{ form_label(form.email) }}
                {{ form_widget(form.email) }}
            </p>
            <p>
                {{ form_label(form.username) }}
                {{ form_widget(form.username) }}
            </p>
            {{ form_widget(form.plainPassword) }}
            <p>
                {{ form_label(form.admin) }}
                {{ form_widget(form.admin) }}
            </p>
            <p>
                {{ form_label(form.groups) }}
                {{ form_widget(form.groups) }}
            </p>
        </div>

        {{ form_rest(form) }}
        <input type="submit" value="{{ "user.button.save" | trans }}" name="commit"/>
        &nbsp;&nbsp;&nbsp;<a href="{{ path('cuteflow_admin_user') }}">{{ "user.label.back_to_list" | trans }}</a>
{% endblock %}
